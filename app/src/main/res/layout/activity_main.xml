<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        style="@style/TextWhite20Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="5dp"
        android:gravity="top"
        android:text="Welcome to TicTacToe!" />



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_margin="3dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/player1Letter"
            style="@style/TextWhite20Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_margin="3dp"
            android:layout_weight="0.2"
            android:gravity="left"
            android:textSize="26sp"
            android:text="X"
            android:textColor="#f44242"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPlayer1"
            style="@style/TextWhite20Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_margin="5dp"
            android:layout_weight="0.3"
            android:gravity="left"
            android:text="Player 1" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="3dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <EditText
            android:id="@+id/etFirstPlayerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.5"
            android:textStyle="italic" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_margin="3dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/player2Letter"
            style="@style/TextWhite20Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_margin="3dp"
            android:layout_weight="0.2"
            android:gravity="left"
            android:textSize="26sp"
            android:text="O"
            android:textColor="#1500ff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPlayer2"
            style="@style/TextWhite20Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_margin="5dp"
            android:layout_weight="0.3"
            android:gravity="left"
            android:text="Player 2" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="3dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <EditText
            android:id="@+id/etSecondPlayerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.5"
            android:textStyle="italic" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="3dp"
        android:orientation="horizontal">


        <CheckBox
            android:id="@+id/chkboxPlayWithPC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Play with computer" />

        <Button
            android:id="@+id/btnShuffle"
            style="@style/ButtonOrangeColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Shuffle players!" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_weight="1" />



    <Button
        android:id="@+id/btnStart"
        style="@style/ButtonOrangeColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:text="Start" />
    <Button
        android:id="@+id/btnHighScore"
        style="@style/ButtonOrangeColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:text="High score table" />
    <Button
        android:id="@+id/btnReadRules"
        style="@style/ButtonOrangeColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:text="Read rules" />

    <Button
        android:id="@+id/btnQuit"
        style="@style/ButtonOrangeColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:text="QUIT" />


</LinearLayout>
